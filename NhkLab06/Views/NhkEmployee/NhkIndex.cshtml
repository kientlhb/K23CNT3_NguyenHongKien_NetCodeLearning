@model IEnumerable<NhkLab06.Models.NhkEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}
<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center ">
    <h2 class="text-center mb-4"> Danh sách nhân viên </h2>
    <a href="/NhkEmployee/NhkCreate" class="btn btn-primary"> Them Moi</a>

</div>
<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Ngày Sinh</th>
            <th>Email</th>
            <th>Điện Thoại</th>
            <th>Lương</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Nhkemployee in Model)
        {
            <tr>
                <td>@Nhkemployee.NhkId</td>
                <td>@Nhkemployee.NhkName</td>
                <td>@Nhkemployee.NhkBirthDay?.ToString("dd/MM/yyyy")</td>
                <td>@Nhkemployee.NhkEmail</td>
                <td>@Nhkemployee.NhkPhone</td>
                <td>@string.Format("{0:N0}", Nhkemployee.NhkSalary)</td>
                <td>
                    @if (Nhkemployee.NhkStatus == true)
                    {
                        <span class="badge bg-success">Đang làm</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nghỉ</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
